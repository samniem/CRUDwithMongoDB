extends layout

block content
    h1 Edit User Data
    h3= "id: "+user._id
    form(method="POST", action='/users/edit/'+user._id)
        #form-group
            label Name: 
            input(name='name', type='text', value=user.name)
        #form-group
            label Email: 
            input(name='email', type='email', value=user.email)
        #form-group
            label Country: 
            input(name='country', type='text', value=user.country)
        #form-group
            label City: 
            input(name='city', type='text', value=user.city)
        #form-group
            label Address: 
            input(name='address', type='text', value=user.address)
        #form-group
            label Occupation: 
            input(name='occupation', type='text', value=user.occupation)
        input(type='submit', value='Submit')
    div.delete-div
        a.delete-user(href='#', data-id=user._id) Delete User